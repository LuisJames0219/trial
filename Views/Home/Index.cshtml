@{
    Layout = "~/Views/Shared/_Loginlayout.cshtml";
}

    <div class="slider-thumb"></div>
    <div class="w3l-signinform">
        <!-- container -->
        <div class="wrapper">
            <!-- main content -->
            <div class="w3l-form-info">
                <div class="w3_info">
                    <h1 class="Logo">Welcome!</h1>
                    <p class="sub-para">The World of Worldcraft</p>
                    <h2>Log In</h2>
                    <script>
                        function login() {
                            var email = document.getElementById("email").value;
                            var password = document.getElementById("password").value;

                            // Check if the email and password match the admin credentials
                            if (email === "admin@example.com" && password === "admin123") {
                                // Redirect to the dashboard
                                window.location.href = "../Dashboard/dashboard.html";
                            } else {
                                alert("Invalid email or password. Please try again.");
                            }
                        }
                    </script>
                    <div class="row">
                        <div class="demo-vertical-spacing demo-only-element col-md-8 ">
                            <form action="#" method="post">
                                <div class="input-group">
                                    <span><i class="fa fa-user" aria-hidden="true"></i></span>
                                    <input type="email" id="email" placeholder="Email or Username" required="">
                                </div>

                                <div class="input-group two-groop">
                                    <span><i class="fa fa-key" aria-hidden="true"></i></span>
                                    <input type="Password" id="password" placeholder="Password" required="">
                                </div>
                                <div class="form-row bottom">
                                    <div class="form-check">
                                        <input type="checkbox" id="remenber" name="remenber" value="remenber">
                                        <label for="remenber"> Remember me?</label>
                                    </div>
                                    <a href="#url" class="forgot">Forgot password?</a>
                                </div>
                                <button class="btn btn-primary btn-block" type="button" onclick="login()">LOG IN</button>
                            </form>

                            <p class="account">Don't have an account? <a href="#register">Register</a></p>
                        </div>
                    </div>
                    <!-- //main content -->
                </div>
            </div>
            <!-- //container -->
        </div>